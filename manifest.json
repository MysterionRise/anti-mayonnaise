{
    "manifest_version": 2,

    "name": "Anti Mayonnaise ",
    "description": "This extension will try to limit your consumption of this dirty product",
    "version": "0.2",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions":
    [
    	"tabs",
    	"activeTab",
    	"background",
    	"http://vk.com/im*",
      "http://www.sports.ru/*"
    ],

    "content_scripts":
    [{
        "js": ["test.js"],
        "matches": ["http://vk.com/im*", "https://vk.com/im*", "http://www.sports.ru/*"]
    }]
}
